<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <section id="login">
                <p><img src="../../images/ЛОГО.png" alt="Логотип агентства" @*width="500"*@ height="100" align="left" hspace="0"></p>
                <br />
                <font face="Monotype Corsiva" size="+4" color="#4169E1">
                    Дизайн и качество в короткие сроки
                </font>

                <p>
                    @Html.Partial("_LoginPartical")
                    @if (!(MyRoleProvider.Role(User.Identity.Name, "Клиент")) &&
     !(MyRoleProvider.Role(User.Identity.Name, "Менеджер")) &&
     !(MyRoleProvider.Role(User.Identity.Name, "Директор")) &&
     !(MyRoleProvider.Role(User.Identity.Name, "Администратор")))
                    {
                        @Html.ActionLink("Регистрация", "Create", "User/Create")}
                </p>
            <div class="content-wrapper">
               <hr align="left" size="5" width="100%" color="#C0C0C0" /></div>
</section>
    </header>
    <h2>Меню сайта:</h2>
    <ul>
         @*<li>@Html.ActionLink("Главная", "HomePage", "Home")</li>*@
        <li>@Html.ActionLink("Каталог изделий", "Index", "Product/Index")</li>
        <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
        <li>@Html.ActionLink("Заказы", "Index", "Ordering/Index")</li>
        <li>@Html.ActionLink("Акции", "Index", "Sale/Index")</li>

        @if (MyRoleProvider.Role(User.Identity.Name, "Администратор") || MyRoleProvider.Role(User.Identity.Name, "Директор"))
        {  <li>@Html.ActionLink("Каталог пользователей", "Index", "User/Index")</li> }
    </ul>
